# Voice AI Prompt Engineering Demo - Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
ENVIRONMENT=development
PRODUCTION=false
BASE_URL=http://localhost:8000

# Security & HIPAA
SECRET_KEY=your-super-secret-key-change-in-production
ENCRYPTION_KEY=your-encryption-key-change-in-production
HIPAA_ENABLED=true
AUDIT_LOG_ENABLED=true

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/voice_ai_demo
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# OpenAI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# AWS
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=voice-ai-demo-audio
AWS_TRANSCRIBE_LANGUAGE=en-US
AWS_POLLY_VOICE_ID=Joanna

# Logging
LOG_LEVEL=INFO

# Monitoring
SENTRY_DSN=your-sentry-dsn-if-using
METRICS_ENABLED=true

# Call Settings
MAX_CALL_DURATION=1800
SILENCE_TIMEOUT=5
HOLD_DETECTION_ENABLED=true
